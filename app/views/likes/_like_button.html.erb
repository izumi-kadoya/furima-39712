<% if user_signed_in? && @item.liked_by?(current_user) %>
  <%= link_to item_like_path(@item.id), data: { turbo_method: :delete, action: "ajax:success->like#toggle" }, remote: true, id: "like-btn<%= @item.id %>" do %>
    <%= image_tag "star_yellow.png", class: "favorite-star-icon-yellow", width: "20", height: "20" %>
  <% end %>
<% else %>
  <%= link_to item_likes_path(@item.id), data: { turbo_method: :post, action: "ajax:success->like#toggle" }, remote: true, id: "like-btn<%= @item.id %>" do %>
    <%= image_tag "star.png", class: "favorite-star-icon", width: "20", height: "20" %>
  <% end %>
<% end %>
